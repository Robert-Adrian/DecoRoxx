<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#D9D9E3"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/cos_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:fontFamily="@font/allura"
        android:paddingTop="30dp"
        android:textSize="40dp"
        android:backgroundTint="#707070"
        android:text="Cos de cumparaturi"
        android:gravity="center_horizontal" />

    <ScrollView
        android:id="@+id/container_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottom_component"
        layout="@layout/bottom_component_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />


</LinearLayout>