<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center" android:background="#D9D9E3">

    <TextView
        android:id="@+id/finish_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:fontFamily="@font/allura"
        android:paddingTop="30dp"
        android:textSize="40dp"
        android:backgroundTint="#707070"
        android:text="Finalizare"
        android:gravity="center_horizontal" />


    <ScrollView
        android:id="@+id/container_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Alege metoda de plata"
                android:padding="10dp"
                android:textSize="17dp"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Plata la livrare"
                android:buttonTint="#000"
                android:fontFamily="casual"
                android:checked="true"
                android:textColor="#000"
                android:background="#ffff"
                android:padding="15dp"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Plata cu cardul"
                android:clickable="false"
                android:fontFamily="casual"
                android:background="#ffff"
                android:padding="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:padding="10dp"
                android:fontFamily="casual"
                android:textSize="17dp"
                android:text="Comentarii"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Comentarii"
                android:fontFamily="casual"
                android:background="#ffff"
                android:padding="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:fontFamily="casual"
                android:textSize="15dp"
                android:text="Produsele se pot livra doar in Timisoara"/>


        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottom_component_finish"
        layout="@layout/bottom_component_finishcomand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />


</LinearLayout>