<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center" android:background="#D9D9E3">


    <include
        android:id="@+id/title_send"
        layout="@layout/send_receive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/message1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Va multumim ca a-ti comandat de la noi"
        android:textAlignment="center"
        android:gravity="center"
        android:fontFamily="@font/allura"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/message2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:fontFamily="@font/allura"
        android:textSize="18dp"
        android:text="In cel mai scurt timp ve-ti fii contactat de cineva din echipa noastra"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <include
        android:id="@+id/container_flower_logo"
        layout="@layout/container_flower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acasa"
        android:fontFamily="@font/allura"
        android:textSize="20dp"
        android:textColor="#fff"
        android:padding="10dp"
        android:background="@drawable/add_cos"/>

</LinearLayout>