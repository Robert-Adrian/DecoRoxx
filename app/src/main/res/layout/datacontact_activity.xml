<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center" android:background="#D9D9E3">

    <TextView
        android:id="@+id/datacontact_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:gravity="center"
        android:fontFamily="@font/allura"
        android:paddingTop="30dp"
        android:textSize="40dp"
        android:backgroundTint="#707070"
        android:text="Date de contact" />

    <ScrollView
        android:id="@+id/container_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Persoana de contact"
                android:padding="10dp"
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/name_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nume si Prenume *"
                android:fontFamily="casual"
                android:background="#ffff"
                android:padding="15dp"/>

            <EditText
                android:id="@+id/phone_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefon *"
                android:fontFamily="casual"
                android:background="#ffff"
                android:padding="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:padding="10dp"
                android:fontFamily="casual"
                android:textSize="17dp"
                android:text="Adresa de livrare"/>

            <EditText
                android:id="@+id/address_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Adresa *"
                android:fontFamily="casual"
                android:background="#ffff"
                android:padding="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:fontFamily="casual"
                android:textSize="15dp"
                android:text="Produsele se pot livra doar in Timisoara"/>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/finalization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/add_cos"
        android:drawableRight="@drawable/shopping_cart"
        android:onClick="finalization"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Finalizare"
        android:textColor="#ffff"
        android:textStyle="bold" />

</LinearLayout>